{
	"name": "nanahoshi-v2",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"@types/bun": "^1.3.4",
			"hono": "^4.8.2",
			"@orpc/server": "^1.12.2",
			"@orpc/openapi": "^1.12.2",
			"@orpc/zod": "^1.12.2",
			"better-auth": "^1.4.9",
			"@orpc/client": "^1.12.2",
			"drizzle-orm": "^0.45.1",
			"@types/pg": "^8.16.0"
		}
	},
	"type": "module",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @nanahoshi-v2/db db:push",
		"db:studio": "turbo -F @nanahoshi-v2/db db:studio",
		"db:generate": "turbo -F @nanahoshi-v2/db db:generate",
		"db:migrate": "turbo -F @nanahoshi-v2/db db:migrate",
		"db:start": "turbo -F @nanahoshi-v2/db db:start",
		"db:watch": "turbo -F @nanahoshi-v2/db db:watch",
		"db:stop": "turbo -F @nanahoshi-v2/db db:stop",
		"db:down": "turbo -F @nanahoshi-v2/db db:down",
		"infra:up": "docker compose --env-file apps/server/.env up -d",
		"infra:down": "docker compose --env-file apps/server/.env down",
		"infra:logs": "docker compose --env-file apps/server/.env logs -f",
		"check": "biome check --write ."
	},
	"dependencies": {
		"@nanahoshi-v2/env": "workspace:*",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@nanahoshi-v2/config": "workspace:*",
		"@types/bun": "catalog:",
		"turbo": "^2.6.3",
		"typescript": "catalog:"
	},
	"packageManager": "bun@1.3.1"
}
